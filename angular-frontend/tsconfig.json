{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",             // ðŸ”¥ Necesario para que funcione 'src/...' o alias
    "paths": {
      "@core/*": ["app/core/*"],
      "@auth/*": ["app/auth/*"],
      "@admin/*": ["app/admin/*"],
      "@estudiante/*": ["app/estudiante/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2022", "dom"]
  }
}
